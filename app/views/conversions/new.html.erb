<div class="section__header">
    <div class="section__header__main">
        <%= image_tag("pickar_logo_white.png", :alt => "logo", :class => "pickar_logo") %>
    </div>
    <div class="section__header__content">
        <h1>Convert currencies in real-time</h1>
    </div>
    <div class="section__header__footer">
        <div class="section__header__form">
            <%= render 'form', conversion: @conversion %>
        </div>
        <div class="section__header__table">
            <p> <%= link_to "View conversation history >",conversions_path %>  </p>
        </div>
    </div>
</div>
<div class="section__main">
    <% if @conversion.errors.any? %>
        <div id="error_explanation">
            <h2><%= pluralize(@conversion.errors.count, "error") %> prohibited this article from being saved:</h2>
        
            <ul>
            <% @conversion.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
            <% end %>
            </ul>
        </div>
    <% end %>
    <% flash.each do |type, msg| %>
        <div class="section__main__result">
            <p id="main__result__amount"><%= type %> = </p>
            <p id="main__result__res"><%= msg %></p>
        </div>
    <% end %>
</div>