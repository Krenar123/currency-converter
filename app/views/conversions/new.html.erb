<div class="section">
    <div class="section__header">
        <div class="section__header__main">
            <%= image_tag("pickar_logo_white.png", :alt => "logo", :class => "pickar_logo") %>
        </div>
        <div class="section__header__content">
            <h1>Convert currencies in real-time</h1>
        </div>
        <div class="section__header__footer">
            <div class="section__header__form">
                <%= form_with model: @conversion, local: true do |form| %>
                    <div class="section__header__form__items">
                        <div class="form__item">
                            <p>Amount</p>
                            <%= form.number_field :amount, id: "selectionone",step: "0.01",placeholder: "0.01"  %>
                        </div>
                        <div class="form__item">
                            <p>From</p>
                            <%= form.select(:from, raw('<option value="EUR">EUR</option><option value="USD">USD</option><option value="CHF">CHF</option>')) %>
                        </div>
                        <div class="switcher">
                            <%= image_tag("left.png", :alt => "logo", :class => "arrow-left") %>
                            <%= image_tag("right.png", :alt => "logo", :class => "arrow-right") %>
                        </div>
                        <div class="form__item">
                            <p>To</p>
                            <%= form.select(:to,raw('<option value="EUR">EUR</option><option value="USD">USD</option><option value="CHF">CHF</option>')) %>
                        </div>
                        <div class="form__item last">
                            <p style="opacity:0">Submit</p>
                            <%= form.submit "Convert", id: 'selectionsubmit' %>
                        </div>
                    </div>
                <% end %>
            </div>
            <div class="section__header__table">
                <p> <%= link_to "View conversation history >",conversions_path %>  </p>
            </div>
        </div>
    </div>
    <div class="section__main">
        <div class="section__main__result">
            <p id="main__result__amount">Krenar = </p>
            <p id="main__result__res">Nali ma i forti USD</p>
        </div>
    </div>

</div>
